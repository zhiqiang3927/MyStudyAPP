<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_mainframe_bottom_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:src="@mipmap/main_bottom_work_no" />


    <TextView
        android:id="@+id/item_mainframe_bottom_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="我的工作"
        android:textColor="@drawable/selector_mainframe_bottom_tab_textcolor"
        android:textSize="13sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/item_mainframe_bottom_num_text"
            android:layout_marginTop="2dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:background="@mipmap/function_common_redpoint"
            android:gravity="center"
            android:text="99"
            android:textColor="#fff"
            android:textSize="8sp"
            android:visibility="visible" />
    </FrameLayout>

</RelativeLayout>
